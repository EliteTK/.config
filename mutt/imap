######################
# IMAP Configuration #
######################

set mbox_type="Maildir"
set folder="~/Maildir"
source "$XDG_CONFIG_HOME/mutt/mailboxes"
set spoolfile="+INBOX"
set record="+Sent"
set postponed="+Drafts"
set mail_check=20
set beep_new=yes
set check_new
set timeout=5

