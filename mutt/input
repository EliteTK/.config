#######################
# Input Configuration #
#######################

#macro index O "<shell-escape>offlineimap<enter>"		"run offlineimap"
#macro index o "<shell-escape>offlineimap -qf INBOX<enter>"	"run offlineimap (INBOX)"

bind index - collapse-thread
bind index _ collapse-all

bind index <F7> sidebar-prev
bind index <F8> sidebar-next
bind index <F9> sidebar-open
bind pager <F7> sidebar-prev
bind pager <F8> sidebar-next
bind pager <F9> sidebar-open

bind editor <TAB> complete-query
bind editor ^T complete

# vim:set ft=muttrc:
