#######################
# Input Configuration #
#######################

#macro index O "<shell-escape>offlineimap<enter>"		"run offlineimap"
#macro index o "<shell-escape>offlineimap -qf INBOX<enter>"	"run offlineimap (INBOX)"

bind index - collapse-thread
bind index _ collapse-all

bind index <esc>k sidebar-prev
bind index <esc>j sidebar-next
bind index <esc>l sidebar-open
bind pager <esc>k sidebar-prev
bind pager <esc>j sidebar-next
bind pager <esc>l sidebar-open

bind editor <TAB> complete-query
bind editor ^T complete

# vim:set ft=muttrc:
